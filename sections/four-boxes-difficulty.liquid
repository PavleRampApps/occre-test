<style>
    .four-boxes-container {
        width: 100%;
        padding: 100px 40px;
        display: none;
    }
    .four-boxes-container h1 {
        font-family: Montserrat,sans-serif;
        font-size: 50px;
        font-weight: 700;
        font-style: normal;
        color: #202223;
        text-align: center;
        margin-bottom: 30px;
    }
    .four-boxes-container .boxes {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        flex-wrap: wrap;
    }
    .four-boxes-container .box {
        position: relative;
        display: flex;
        width: 23%;
        margin-bottom: 40px;
    }
    .four-boxes-container .box a {
        display: block;
    }
    .four-boxes-container .box img {
        width: 100%;
        height: 100%;
    }
    .four-boxes-container .box .caption {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #ffb81c;
        opacity: .8;
    }
    .four-boxes-container .box .caption h2 {
        font-family: Montserrat,sans-serif;
        font-size: 36px;
        font-weight: 700;
        font-style: normal;
        color: #202223;
    }
    @media only screen and (max-width:992px){
        .four-boxes-container .box {
            width: calc(50% - 20px);
        }
    }
    @media only screen and (max-width:768px) {
        .four-boxes-container h1 {
            font-size: 35px;
        }
    }
    @media only screen and (max-width:600px) {
        .four-boxes-container .box {
            width: calc(50% - 10px);
            margin-bottom: 20px;
        }
        .four-boxes-container {
            width: 100%;
            padding: 50px 16px 10px;
        }
    }
    @media only screen and (max-width:500px) {
        .four-boxes-container h1 {
            font-size: 25px;
        }
        .four-boxes-container .box .caption h2 {
            font-size: 20px;
        }
    }

</style>

