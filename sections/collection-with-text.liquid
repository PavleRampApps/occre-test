      {
        "type": "text",
        "id": "add_cart_link_label",
        "label": "Add to cart label",
        "default": "AÃ±adir a la cesta"
      },
      {
        "type": "color",
        "id": "bg_col",
        "label": "Background color",
        "default": "#F8F8F8"
      }
    ],
    "presets": [
      {
        "name": "Collection with text",
        "settings": {}
      }
    ]
}   
{% endschema %}