        "default": "Ipsum massa elit"
      },
      {
        "type": "richtext",
        "id": "body",
        "label": "Text"
      },
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Label",
        "default": "Comprar ahora"
      },
      {
        "type": "checkbox",
        "id": "new_tab",
        "label": "Open link in a new tab",
        "default": false
      },
      {
        "type": "select",
        "id": "button_style",
        "label": "Button style",
        "default": "primary",
        "options": [
          {
            "label": "Button - primary",
            "value": "primary"
          },
          {
            "label": "Button - secondary",
            "value": "secondary"
